mixin certification_card(data)
  a.certification-card.cards(href=data.link, target='_blank')
    img.certification-card__img(src=data.img_url, alt='cert_img')
    .certification-card__content
      h3.certification-card__name= data.name
      if data.course
        p.certification-card__course= data.course + ' courses'
      p.certification-card__platform= data.platform
